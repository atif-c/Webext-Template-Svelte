{
    "name": "webext-template-svelte",
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "vite:dev": "vite",
        "vite:preview": "vite preview",
        "prebuild": "vite build",
        "start:firefox": "web-ext run --source-dir=dist/firefox --no-reload",
        "dev": "npm run build:firefox && concurrently -k -n WATCH,WEBEXT -c cyan,magenta \"npm:watch:firefox\" \"npm:start:firefox\"",
        "watch:firefox": "chokidar \"src/**/*\" -c \"npm run build:firefox\" --initial",
        "watch:chromium": "chokidar \"src/**/*\" -c \"npm run build:chromium\" --initial",
        "build:firefox": "vite build && node build.js firefox",
        "build:chromium": "vite build && node build.js chromium",
        "build": "node build.js",
        "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json"
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^6.0.0",
        "@tsconfig/svelte": "^5.0.4",
        "@types/archiver": "^6.0.3",
        "@types/node": "^24.1.0",
        "@types/webextension-polyfill": "^0.12.3",
        "archiver": "^7.0.1",
        "chokidar-cli": "^3.0.0",
        "concurrently": "^9.2.0",
        "svelte": "^5.35.5",
        "svelte-check": "^4.2.2",
        "typescript": "~5.8.3",
        "vite": "^7.0.4",
        "vite-plugin-static-copy": "^3.1.1",
        "web-ext": "^8.9.0"
    },
    "dependencies": {
        "webextension-polyfill": "^0.12.0"
    }
}
